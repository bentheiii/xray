fn main()->bool{
    assert(format(3.14, "+f") == "+3.140000")
    && assert(format(-3.14, "+f") == "-3.140000")

    && assert(format(-314.15, "015e") == "-00003.141500e2")
    && assert(format(-314.15, "015.3E") == "-00000003.141E2")
    && assert(format(-0.0031415, "015.3e") == "-0000003.142e-3")
    && assert(format(-0.0031415, ".5%") == "-0.31415%")
    && assert(format(-3.14, ".0") == "-3")

    && assert(format(-314.159265359, ",.2%") == "-31,415.93%")
}