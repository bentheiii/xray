fn collatz_step(n: int)->int{
    (n%2 == 0).if(
        (n/2).floor(),
        3*n+1
    )
}
fn collatz_helper(n: int, ret: Array<int>)->Array<int>{
    if (n == 1, [1] + ret, collatz_helper(collatz_step(n), [n] + ret))
}

fn collatz(n: int)->Array<int>{
    collatz_helper(n, [])
}

fn main() -> bool{
    assert((5).collatz() == [5, 16, 8, 4, 2, 1])
}